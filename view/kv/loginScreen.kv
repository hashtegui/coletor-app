#import c source.app_lib.constants
#:import log view.LoginView
#:import NoTransition kivy.uix.screenmanager.FallOutTransition
MainWindow:

<MainWindow>:
    transition: NoTransition()
    LoginWindow:
    DashScreen:


<DashScreen@Screen>:
    name:'dash'
    Button:
        text: 'passou'
        on_press: app.root.current= 'login'

<LoginWindow@Screen>:
    name:'login'
    canvas.before:
        # Color:
        #     rgba: 0.3, 0.1, 0.1, 1
        Rectangle:
            pos:self.pos
            size: self.size
            source: 'assets/capa_kazanto.jpg'

    BoxLayout:
        orientation: 'vertical'
        spacing: '10dp'

        
        Widget:

        TextInput:
            id:login
            hint_text: "Login"
            size_hint: .7,.2
            pos_hint: {'center_x': 0.5,'center_y': 0.5}
            padding: ('10dp', '10dp', '10dp', '10dp')
            multiline: False
        
        TextInput:
            id:senha
            hint_text: "Senha"
            size_hint: .7,.2
            padding: ('10dp', '10dp', '10dp', '10dp')
            pos_hint: {'center_x': 0.5,'center_y': 0.5}
            multiline: False

        BoxLayout:
            orientation:'vertical'
            Button:
                size_hint: .2,.2
                text: "Enviar"
                pos_hint: {'center_x': 0.5}
                on_press: 
                    if log.LoginView.login(login.text,int(senha.text)):\
                    app.root.current = "dash"; 
            Widget: